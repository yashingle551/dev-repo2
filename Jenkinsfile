pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                // Example: sh 'make'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                // Example: sh 'make test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Example: sh 'make deploy'
            }
        }
    }
}
